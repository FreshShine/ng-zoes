.file-view-container{
   position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    background-color: rgba(12,15,19,.5);
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    z-index: 109;
    padding:24px;
    .file-view-container-close{
        width: 100%;
        text-align: right;
        background: 0 0;
        color: #fff;
        font-size: 30px;
        border-color: transparent;
        box-shadow: none;
    }
    .file-view-container-content{
        display:flex;
        flex-flow:row;
        height: 100%;
        .file-view-container-content-view{
            flex: 1;
            width: calc(100vw - (80px * 2));
//          background: #fff;
            border-radius: 6px;
            padding: 15px;
            margin-bottom: 1.15rem;
            margin-top: 2.3rem;
            margin: 24px;
            display:flex;height:80%;
            &>div{
                width:100%;
                display:flex;
                flex-direction:column;
                justify-content:center
            }
            img{
                max-height: 75vh;
                max-width: calc(112.49vh);
                min-height: 300px;
                min-width: calc(449.958px);
            }
            p{
                text-align:center;
                color:#fff;
            }
        }
        .file-view-container-icon{
            font-size:35px;
            height:70%
            color:#fff;
            opacity:0.6;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .file-view-container-icon:hover{
             opacity:1;
        }
    }
}
i{
    cursor:pointer;
}